.menu-item-wrap {
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.menu-item-wrap .menu-item {
  display: flex;
  align-items: center;
}

.menu-item .img {
  width: 70rpx;
  height: 70rpx;
  margin-right: 30rpx;
  border-radius: 6rpx;
}

.menu-item .info {
  font-size: 28rpx;
  color: #555;
}
.info .count{
  font-size: 24rpx;
  color: #999;
}